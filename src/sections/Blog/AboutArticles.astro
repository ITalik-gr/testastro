---
import ArticlesScroll from "../../components/Blog/ArticlesScroll.astro";
import MainButton from "../../components/Buttons/MainButton.astro";


const {} = Astro.props

---
<section class="bg-gray-50 pt-[1.85rem] pb-[1.35rem] md:pt-[80px] md:pb-[84px]">
  <div class="container max-w-[1296px]">

    <!-- Top card -->
    <div class="scroll-animation rounded-2xl py-6 px-4 bg-white mb-4 md:flex md:justify-between md:items-center md:py-[46px] md:px-8">
      <!-- Text block -->
      <div class="">
        <div class="text-2xl text-black leading-117 font-bold -tracking-[0.72px] mb-6 | 
                    md:text-4xl lg:text-[52px]">Expertly curated blog</div>
        <p class="font-medium -tracking-[0.48px] leading-135 text-gray-800 mb-6 | md:mb-0 md:text-xl md:max-w-[405px]">
          Expand your PPC marketing knowledge with our in-depth insights and analysis.
        </p>
      </div>
      <!-- Btn -->
      <MainButton title="Check all articles" link="/blog" lines={true} linesStyle="hidden md:flex bottom-auto -left-[40px] -top-[35px] rotate-[70deg]" style="w-full max-w-xs md:max-w-[207px]" />
    </div>

    <!-- Blog Cards -->
      <ArticlesScroll />

  </div>
</section>

