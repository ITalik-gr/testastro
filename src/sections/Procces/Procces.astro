---

import ProccesCard from '../../components/Cards/ProccesCard.astro';

import grid from '../../images/Decorate/procces-grid.svg'
import rocket from '../../images/Icons/rocket.svg';
import search from '../../images/Icons/search-sm.svg';
import presentation from '../../images/Icons/presentation-chart.svg'
import { Image } from 'astro:assets';


const {} = Astro.props

---
<section class="bg-[#0F0F11] pt-[50px] overflow-hidden | md:pt-[94px]">
  <div class="container">
    <!-- Text -->
    <div class="scroll-animation mb-11 | sm:text-center sm:flex-col-center | md:mb-[105px]">
      <div class="mb-4 text-[28px] font-bold -tracking-[0.84px] leading-117 text-white | sm:text-4xl sm:mb-6 | md:text-5xl md:mb-[29px] | lg:text-[52px]">
        Our <span class="text-bg">Process</span>
      </div>

      <div class="text-[rgba(255,255,255,0.8)] leading-135 -tracking-[0.47px] font-medium mb-7 pretty | sm:max-w-[498px] sm:text-lg | md:text-xl md:-tracking-[0.6px] md:mb-[62px]">
        Each and every one of our campaigns succeeds because of our incredible attention to detail.
      </div>

      <!-- Decorate line -->
      <div class="">
        <svg class="opacity-10 | md:opacity-100" xmlns="http://www.w3.org/2000/svg" width="103" height="14" viewBox="0 0 103 14" fill="none">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M27.453 8.24455C23.0279 9.50971 17.9188 10.7688 13.0039 11.0832C8.80301 11.3515 4.74535 10.9347 1.42409 9.16145C0.955912 8.91177 0.369626 9.08341 0.116431 9.54548C-0.13715 10.0072 0.0373058 10.5853 0.505485 10.8354C4.12857 12.7693 8.54634 13.2751 13.1286 12.9821C18.1319 12.6623 23.3332 11.3949 27.8471 10.1115C28.3708 11.1578 29.4554 12.1333 31.366 12.853C34.3005 13.9587 38.3072 13.945 42.5281 13.3219C48.65 12.4187 55.2354 10.2648 59.4694 8.7344C59.6431 8.67198 59.9017 8.57264 60.2182 8.44171C60.3147 8.65181 60.4228 8.85887 60.5424 9.06211C61.5807 10.8335 63.4179 12.2657 65.2899 12.7773C77.1622 16.0209 91.0185 12.1344 102.3 8.97151C102.81 8.82802 103.107 8.30127 102.964 7.7962C102.818 7.29112 102.285 6.99767 101.772 7.14116C90.8062 10.2158 77.3436 14.0949 65.8032 10.9431C64.3828 10.5549 63.0011 9.45414 62.2137 8.10981C62.1249 7.95985 62.0477 7.80647 61.9744 7.6508C63.5298 6.89071 65.3593 5.83109 66.3435 4.69686C67.3548 3.53409 67.6057 2.29291 66.7256 1.12062C65.9691 0.118465 64.8228 0.0332062 63.6302 0.552743C62.3449 1.1092 61.021 2.41012 60.5926 3.02062C59.7898 4.16094 59.5351 5.39795 59.6817 6.60411C59.3035 6.76168 58.9963 6.8789 58.8067 6.94742C54.6653 8.44399 48.2285 10.5564 42.2425 11.4398C38.391 12.0084 34.7324 12.0842 32.0545 11.0756C30.9124 10.6451 30.1579 10.1427 29.7483 9.55958C30.5566 9.32131 31.3359 9.08685 32.0804 8.86305C33.5529 8.4204 36.6186 7.68772 38.809 6.38184C40.5508 5.34352 41.7319 3.93107 41.6632 2.16045C41.6281 1.25079 41.0943 0.643699 40.2448 0.303431C38.9753 -0.204688 36.7799 0.0411827 35.9624 0.212459C33.483 0.730854 30.1737 2.87676 28.5364 5.2948C27.883 6.25965 27.4943 7.26904 27.453 8.24455ZM29.4898 7.65003C30.1903 7.44222 30.8673 7.2382 31.5176 7.04257C32.8921 6.62922 35.7652 5.97266 37.8104 4.75317C38.8935 4.10765 39.7777 3.33426 39.7349 2.23314C39.7314 2.14751 39.6453 2.12315 39.5693 2.08814C39.4516 2.03447 39.3169 1.99754 39.1733 1.96861C38.2018 1.77298 36.8969 1.96214 36.3627