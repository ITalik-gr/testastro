---
import { Image } from 'astro:assets';
import Trend from '../../images/Case/Trend.svg'

const {name, image, conversion, leads, increase, cardStyle = ""} = Astro.props

const link = name.replace(/\s/g, '');

---
<a href={`/cases/${link}`}
  data-mobile={false}
  class={`bg-white rounded-3xl border border-gray-100 border-solid 
           px-4 py-5 w-full mb-4 flex flex-col items-start max-w-[280px]
           md:py-8 md:px-8 md:max-w-[937px] md:items-center
           md:grid md:grid-cols-4 md:gap-0 ${cardStyle}
           md:hover:border-primary-300 transition-all scroll-animation scroll-animation-scale
           `}>

  <div class="flex items-center justify-between w-full mb-5 md:mb-0 font-bold text-lg tracking-[-0.20px] leading-normal | md:col-span-1 lg:w-[250px]">
    <div class="flex items-center | max-md:max-w-[193px]">
      <Image width={38} src={image} alt='name' class='mr-2 md:mr-4 max-w-[32px] md:max-w-[38px]' />
      <div class="text-overflow-ellipsis">{name}</div>
    </div>

    <svg class="md:hidden" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
      <path d="M4 12H20M20 12L14 6M20 12L14 18" stroke="#80809C" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </div>

  <div class="increase flex items-center flex-row-reverse justify-between w-full mb-6 | md:mb-0 md:col-span-1 md:flex-row md:justify-start md:pl-12">

    <Image src={Trend} alt='Trend' class='md:mr-3' />

    <div class="flex flex-col">

       <div class="text-gray-400 text-xs font-bold md:hidden">ROAS</div>

      <div class="font-bold text-lg mr-1 md:text-[22px]  ">
        {increase}
      </div>

    </div>
  </div>

  <div class="flex flex-col justify-start items-start md:justify-end md:flex-row md:items-center mb-6 md:mb-0 md:col-span-1">
    <div class="text-gray-400 text-sm font-bold mb-1 md:hidden">Increase in Sales Leads</div>
    <div class="text-lg font-bold leading-normal tracking-[-0.18px] flex items-center justify-center lg:pr-[10px] lg:text-[22px]">
      {leads}
    </div>
  </div>

  <div class="md:col-span-1 md:text-right  md:w-full tracking-[-0.16px]">
    <div class="text-gray-400 text-sm font-bold mb-1 md:hidden">Conversion Rate Increase</div>
    <div class="flex items-center text-lg leading-normal font-bold | md:justify-end lg:text-[22px]">
      {conversion}
    </div>
  </div>

</a>

