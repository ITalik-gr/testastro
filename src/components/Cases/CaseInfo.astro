---
const { data } = Astro.props

const {name, image, roas, IncreasedSales, IncreasedSalesBefore, ConversionRateIncrease, LeadDecrease, RevenueIncrease} = data;


---
<div class="px-4 py-6 max-w-[618px] w-full bg-white rounded-xl -mt-10 z-20 relative | lg:max-w-[240px] xl:max-w-[300px] lg:mt-0 xl:sticky xl:top-8 xl:left-0 xl:p-6 xl:pb-8">
  <!-- Nav -->
  <div class="contents-nav flex justify-between items-center cursor-pointer ">
    <div class="flex items-center">
      <img class="max-w-[32px]" src={image} alt="">
      <div class="text-xl font-bold ml-[10px] leading-135 | xl:text-xl">
        {name}
      </div>
    </div>
    <svg class="transition-all lg:hidden" xmlns="http://www.w3.org/2000/svg" width="24" height="25" viewBox="0 0 24 25" fill="none">
      <path d="M6 9.5L12 15.5L18 9.5" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </div>
  <!-- Body -->

  <div class="contents-body max-h-0 h-full transition-all delay-300 overflow-hidden child:mb-6 last:mb-0 lg:pt-0 lg:contents-body--active lg:!border-none">
    <div class="">
      <div class="font-bold text-gray-400 text-sm uppercase mb-1">ROAS</div>
      <div class="font-bold text-black -tracking-[0.16px] | md:text-xl">{roas}</div>
    </div>

    <div class="">
      <div class="font-bold text-gray-400 text-sm uppercase mb-1">Increase in Sales Leads </div>
      <div class="flex items-center">
        <div class="font-bold text-black -tracking-[0.16px] | md:text-xl">{IncreasedSales}</div>
        <div class="text-gray-500 text-sm ml-1 font-semibold -tracking-[0.35px]">{IncreasedSalesBefore} before</div>
      </div>
    </div>

    <div class="">
      <div class="font-bold text-gray-400 text-sm uppercase mb-1">Conversion Rate Increase</div>
      <div class="font-bold text-black -tracking-[0.16px] | md:text-xl">{ConversionRateIncrease}</div>
    </div>

    <div class="">
      <div class="font-bold text-gray-400 text-sm uppercase mb-1">Cost per Lead Decrease </div>
      <div class="font-bold text-black -tracking-[0.16px] | md:text-xl">{LeadDecrease}</div>
    </div>

    <div class="">
      <div class="font-bold text-gray-400 text-sm uppercase mb-1">Revenue Increase</div>
      <div class="font-bold text-black -tracking-[0.16px] | md:text-xl">{RevenueIncrease}</div>
    </div>

  </div>
</div>

<style>

</style>
<script>
  document.addEventListener('astro:page-load', () => {
    const contentsNav = document.querySelector('.contents-nav'),
        contentsBody = document.querySelector('.contents-body');

    contentsNav.addEventListener('click', () => {
      contentsBody.classList.toggle('contents-body--active');
      contentsNav.querySelector('svg').classList.toggle('rotate-180')
    })
  })

</script>